{
  "manifest_version": 3,
  "name": "Bold Reader",
  "description": "Toggle bold vowels or first letters to improve reading speed",
  "version": "2.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
