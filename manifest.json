{
  "manifest_version": 3,
  "name": "Bold Reader",
  "description": "Makes all vowels bold to improve reading speed",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
